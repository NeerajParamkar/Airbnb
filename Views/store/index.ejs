<%- include('../partilas/head') %>

<style>
 body {
  background-color: #f3f4f6;
  font-family: 'Poppins', sans-serif;
  color: #2d3748;
  line-height: 1.75;
}

.header {
  margin-top: 10px;
  background: linear-gradient(90deg, #6a5acd, #4c51bf);
  color: white;
  padding: 2rem 0;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  border-radius: 12px;
  text-align: center;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

.title {
  font-size: 2.5rem;
  font-weight: 800;
  text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
}

.main-content {
  max-width: 1200px;
  margin: 3rem auto;
  padding: 0 1rem;
}

.house-list {
  list-style: none;
  padding: 0;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

.house-item {
  background: white;
  padding: 2rem;
  border-radius: 10px;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
  transition: transform 0.3s, box-shadow 0.3s;
}

.house-item:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
}

.house-item-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.house-image {
  width: 100%;
  height: 200px;
  object-fit: cover;
  border-radius: 10px;
  transition: transform 0.3s;
}

.house-image:hover {
  transform: scale(1.05);
}

.house-details {
  text-align: center;
  margin-top: 1rem;
}

.house-name {
  font-size: 1.8rem;
  font-weight: 700;
}

.house-location,
.house-price,
.house-rating {
  font-size: 1.2rem;
  color: #4a5568;
}

.book-form {
  display: flex;
  justify-content: center;
  gap: 1rem;
  margin-top: 1rem;
}

.book-button1 {
  background: linear-gradient(90deg, #4c51bf, #6a5acd);
  color: white;
  padding: 0.75rem 1.5rem;
  border-radius: 8px;
  font-size: 1rem;
  cursor: pointer;
  transition: background 0.3s, transform 0.2s;
}

.book-button1:hover {
  background: linear-gradient(90deg, #6a5acd, #4c51bf);
  transform: scale(1.05);
}

.footer {
  background: #2d3748;
  color: white;
  text-align: center;
  padding: 1.5rem;
  margin-top: 3rem;
  border-radius: 12px 12px 0 0;
}

.navbar {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 2rem;
  padding: 1.5rem;
  background: #ffffff;
  border-radius: 10px;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  transition: box-shadow 0.3s;
}

.navbar:hover {
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
}

.navbar-link {
  font-size: 1.25rem;
  color: #4c51bf;
  text-decoration: none;
  padding: 0.5rem 1rem;
  border-radius: 5px;
  transition: color 0.3s, background 0.3s;
}

.navbar-link:hover {
  color: white;
  background: #4c51bf;
}
</style>
</head>

<body>
  <%- include('../partilas/nav') %>

  <header class="header">
    <div class="container">
      <h1 class="title">Welcome to Airbnb</h1>
      <h3 class="title">Discover your perfect home</h3>

    </div>
  </header>

  <main class="main-content">
    <ul class="house-list">
      <% registeredHouses.forEach(home => { %>
        <li class="house-item">
          <div class="house-item-content">
            <img src="<%= home.photo%>" alt="<%= home.hostname %>" class="house-image">
            <div class="house-details">
              <span class="house-name"><%= home.hostname %></span>
              <p class="house-location">Location: <%= home.Location %></p>
              <p class="house-price">Price: Rs <%= home.price %></p>
              <p class="house-rating">Rating: <%= home.Rating %>‚≠ê</p>
              <div class="book-form">
                <a class="book-button1" href="/homes/<%= home.id %>">Know More</a>
                <%- include('../partilas/favorite',{home:home}) %>
              </div>
            </div>
          </div>
        </li>
      <% }) %>
    </ul>
  </main>

  <footer class="footer">
    <p>&copy; 2025 Airbnb Clone. All rights reserved.</p>
  </footer>
</body>
</html>
