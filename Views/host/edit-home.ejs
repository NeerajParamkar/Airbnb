<%- include('../partilas/head') %>
<style>
.custom-body {
  background-color: #f7fafc; 
  font-family: sans-serif;
  line-height: 1.625;
  color: #2d3748; 
}

.custom-flex {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh; 
}

.custom-container {
  background-color: white;
  padding: 2rem; 
  border-radius: 0.5rem; 
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); 
  max-width: 28rem;
  width: 100%; 
  margin: 0 1rem;
  text-align: center;
}

.custom-heading {
  font-size: 1.875rem; 
  font-weight: 600; 
  color: #2d3748; 
  margin-bottom: 1.5rem; 
}

.custom-form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem; 
}

.custom-input {
  width: 100%;
  padding: 1rem;
  margin-top: 0.5rem; 
  border: 1px solid #e2e8f0; 
  border-radius: 0.375rem; 
  outline: none;
}



.custom-button {
  width: 100%;
  background-color: #5a67d8; 
  color: white;
  padding: 1rem; 
  border-radius: 0.375rem; 
  font-size: 1.125rem; 
  text-decoration: none;
  border: none;
  transition: background-color 0.3s ease-in-out;
}

.custom-button:hover {
  background-color: #4c51bf; 
}

</style>
</head>
<%- include('../partilas/nav') %>

<body class="custom-body">
  <div class="custom-flex">
    <div class="custom-container">
      <h1 class="custom-heading"><%=editing ? "Edit" : "Register"%> Your Home</h1>

      <form action="/host/<%=editing ? 'edit-home': 'home-page'%>" method="POST" class="custom-form">
        <div>
          <input type="hidden" name="id" value="<%=editing ? home.id : ''%>">
          <input 
            type="text" 
            id="hostname" 
            value="<%=editing ? home.hostname : ''%>"
            name="hostname" 
            placeholder="Enter the name of the house" 
            class="custom-input"
            required /> 
          <input 
            type="text" 
            id="Price" 
            value="<%=editing ? home.price : ''%>"
            name="price" 
            placeholder="Enter the Price of the house" 
            class="custom-input"
            required />
          <input 
            type="text" 
            id="Location" 
            value="<%=editing ? home.Location : ''%>"
            name="Location" 
            placeholder="Enter the Location of the house" 
            class="custom-input"
            required />
          <input 
            type="text" 
            id="Rating" 
            value="<%=editing ? home.Rating : ''%>"
            name="Rating" 
            placeholder="Enter the Rating of the house" 
            class="custom-input"
            required />
          <input 
            type="text" 
            id="photo" 
            value="<%=editing ? home.photo : ''%>"
            name="photo" 
            placeholder="Upload the photo of the house" 
            class="custom-input"
            required />
        </div>
        
        <div>
          <button 
            type="submit" 
            class="custom-button">
            <%=editing ? "Update" : "Register"%> Home
          </button>
        </div>
      </form>
    </div>
  </div>
</body>

</html>
