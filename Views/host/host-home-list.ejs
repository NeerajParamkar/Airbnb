<%- include('../partilas/head') %>

<style>
 body {
  background-color: #f7fafc;
  font-family: sans-serif;
  color: #2d3748;
  line-height: 1.625;
}

.header {
  margin-top: 10px;
  background-color: #4c51bf;
  color: white;
  padding: 1.5rem 0;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  border-radius: 10px;
}

.container {
  max-width: 1280px;
  margin-left: auto;
  margin-right: auto;
  padding-left: 1rem;
  padding-right: 1rem;
  text-align: center;
}

.title {
  font-size: 2rem;
  font-weight: 800;
  /* background-color: ; */
}

.subtitle {
  margin-top: 0.5rem;
  font-size: 1.125rem;
}

.main-content {
  max-width: 1280px;
  margin: 2.5rem auto;
  padding: 0 1rem;
}

.header-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.5rem;
}

.section-title {
  font-size: 1.5rem;
  font-weight: 600;
}

.add-home-link {
  color: #4c51bf;
  text-decoration: none;
  font-size: 1.125rem;
}

.add-home-link:hover {
  color: #2c5282;
}

.house-list {
  list-style-type: none;
  padding: 0;
}

.house-item {
  background-color: white;
  padding: 1.5rem;
  border-radius: 0.5rem;
  box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
  transition: box-shadow 0.3s;
  margin-bottom: 1.5rem;
}

.house-item:hover {
  box-shadow: 0 20px 25px rgba(0, 0, 0, 0.1);
}
.house-item-content {
  display: flex;
  justify-content: center; 
  align-items: center;     
  width: 100%;             
  height: 16rem;           
  border: 3px solid black; 
  border-radius: 10px;
}

.house-image {
  width: 50%;            
  height: 100%;            
  object-fit: scale-down;  
  object-position: center; 
  border-radius: 0.375rem; 
}

.house-image:hover {
  filter: brightness(0.9); 
  transition: filter 0.3s ease; 
}

.house-details {
  flex-grow: 1;
  text-align: center;
  line-height: 2.5rem;
  margin-right: 140px;
}

.house-name {
  font-size: 1.5rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
}

.house-location,
.house-price,
.house-rating {
  font-size: 1.125rem;
  color: #718096;
  margin-bottom: 0.25rem;
}

.book-form {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.book-button1 {
  background-color: #d67474;
  color: rgb(0, 0, 0);
  padding: 0.5rem 1rem;
  border-radius: 0.375rem;
  font-weight: 600;
  font-size: 1rem;
  cursor: pointer;
  transition: background-color 0.3s;
  margin-left: 125px;
}

.book-button1:hover {
  background-color: #9f6666a1;
}
.book-button2 {
  background-color: #55c95f;
  color: rgb(0, 0, 0);
  font-weight: 600;
  padding: 0.5rem 1rem;
  border-radius: 0.375rem;
  font-size: 1rem;
  cursor: pointer;
  transition: background-color 0.3s;
  margin-left: 65px;
}

.book-button2:hover {
  background-color: #2c824e89;
}

.footer {
  background-color: #2d3748;
  color: white;
  text-align: center;
  padding: 1rem;
  margin-top: 2.5rem;
}

.footer p {
  margin: 0;
}


/* header */
.navbar {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 2rem;
  padding: 1.5rem;
  background-color: #f3f4f6;
  border-radius: 0.5rem;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: box-shadow 0.3s;
}

.navbar:hover {
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
}

.navbar-link {
  font-size: 1.125rem;
  color: #4f46e5;
  text-decoration: none;
  padding: 0.5rem;
  border-radius: 0.375rem;
  transition: all 0.3s;
}

.navbar-link:hover {
  color: #4338ca;
  background-color: #e0e7ff;
}


</style>
<script>
  function confirmRemove() {
    return confirm("Are you sure you want to remove this home?");
  }
</script>
</head>


<body class="body">
  <%- include('../partilas/nav') %>

  <header class="header">
    <div class="container">
      <h1 class="title">Hey Host! Here are your homes</h1>
    </div>
  </header>   

  <main class="main-content">


    <ul class="house-list">
      <% registeredHouses.forEach(home => { %>
        <li class="house-item">
          <div class="house-item-content">
            <img src="<%= home.photo%>" alt="<%= home.hostname %>" class="house-image">
            <div class="house-details">
              <span class="house-name"><%= home.hostname %></span>
              <p class="house-location">Location: <%= home.Location %></p>
              <p class="house-price">Price: Rs <%= home.price %></p>
              <p class="house-rating">Rating: <%= home.Rating %>‚≠ê</p>

              <div   class="book-form">
                 <form action="/host/delete-home/<%=home.id %>" method="post">
                  <button type="submit" class="book-button1" onclick="return confirmRemove()">Remove Home</button>
                 </form>
                
                <a href="/host/edit-home/<%=home.id%>?editing=true" class="book-button2">Edit</a>
              </div>
            </div>
          </div>
        </li>
      <% }) %>
    </ul>
  </main>

  <footer class="footer">
    <p>&copy; 2025 Airbnb Clone. All rights reserved.</p>
  </footer>
</body>


</html>
